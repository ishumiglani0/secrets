<%- include('partials/header') %>

<div class="btn-group mr-5 z-i" role="group" aria-label="Basic example">
  <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit your Secret</a>
  <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
</div>
<h1 class="c-w text-center c-p t-s-w mt-5">Others' Secrets</h1>

<% const cardClassNames = ['bg-primary', 'bg-secondary', 'bg-success', 'bg-info', 'bg-warning', 'bg-danger','bg-dark']; %>
<% index=0%>
<div class="row justify-content-around p-5">
  <% usersWithSecrets.forEach(function(user){ %>
    <%postno=0%>
    <% user.secrets.forEach(function(secret){ %>
  <div class="card text-white <%= cardClassNames[index % cardClassNames.length] %> m-5 col-4" style="max-width: 18rem;">
    <div class="card-header">#Secret <%=index+1%></div>
    <div class="card-body">
      <p class="card-text"><%=secret.substring(0,200)%>
      <%if(secret.length>200){%>
        ...</p>
        <a href="/secrets/<%=user._id%>/<%=postno%>" class="card-link text-light">Read More &rarr;</a>
      <%}%>
      <%if(secret.length<=200){%>
        </p>
      <%}%>
    </div>
  </div>
  <% postno++%>
  <%index++%>
  <% }) %>
  <% }) %>
</div>
<%- include('partials/footer') %>